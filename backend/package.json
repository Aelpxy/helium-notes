{
    "name": "@helium/backend",
    "version": "1.0.0",
    "description": "Server-side infrastructure of helium.",
    "private": true,
    "main": "./src/index.ts",
    "scripts": {
        "build": "tsc",
        "start": "export GIT_SHA=$(git rev-parse --short HEAD) NODE_ENV=production && node build/src/index.js",
        "dev": "export GIT_SHA=$(git rev-parse --short HEAD) NODE_ENV=development && nodemon ./src/index.ts",
        "db:push": "prisma db push",
        "db:pull": "prisma db pull",
        "format": "prettier --write **/*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aelpxy/helium-notes.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/aelpxy/helium-notes/issues"
    },
    "homepage": "https://github.com/aelpxy/helium-notes#readme",
    "devDependencies": {
    },
    "dependencies": {
    }
}