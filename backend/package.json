{
    "name": "@ryher/backend",
    "version": "1.0.0",
    "description": "Serverside code for Ryher",
    "private": true,
    "main": "./src/index.ts",
    "scripts": {
        "build": "tsc",
        "start": "export GIT_SHA=$(git rev-parse --short HEAD) NODE_ENV=production && node build/index.js",
        "dev": "export GIT_SHA=$(git rev-parse --short HEAD) NODE_ENV=development && nodemon ./src/index.ts",
        "db:push": "prisma db push",
        "db:pull": "prisma db pull",
        "format": "prettier --write **/*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aelpxy/helium-notes.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/aelpxy/helium-notes/issues"
    },
    "homepage": "https://github.com/aelpxy/helium-notes#readme",
    "dependencies": {
        "@prisma/client": "^4.3.1",
        "cors": "^2.8.5",
        "dayjs": "^1.11.5",
        "dotenv": "^16.0.2",
        "express": "^4.18.1",
        "helmet": "^6.0.0",
        "pino": "^8.4.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/node": "^18.7.14",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "prisma": "^4.3.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.2"
    }
}
